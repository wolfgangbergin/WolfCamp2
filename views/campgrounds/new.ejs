<% layout('layouts/boilerplate') %>
    <h1>Add New Campground</h1>

    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <div>
            <label for="image">Image</label>
            <input type="text" name="campground[image]" id="image">
        </div>
        <div>
            <label for="description">Description</label>
            <textarea name="campground[description]" id="description" cols="30" rows="10"></textarea>
        </div>
        <button>Submit</button>
    </form>

    <a href="/campgrounds">Go Back</a>
