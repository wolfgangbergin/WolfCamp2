
    <% layout('layouts/boilerplate') %>
   
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
          <form novalidate action="/campgrounds/<%= campground._id  %>?_method=PUT" method="POST" class="validated-form">
              <div class="mb-3">
                  <label class="form-label" for="title">Title</label>
                  <input required class="form-control"  type="text" name="campground[title]" id="title" value="<%= campground.title %>" ></input>
                  <div class="invalid-feedback">
                    Please provide a valid title.
              </div>
                </div>
              <div class="mb-3">
                  <label class="form-label" for="location">Location</label>
                  <input required class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>" ></input>
                  <div class="invalid-feedback">
                    Please provide a valid location.
              </div>
                </div>
              <div class="mb-3">
                  <label class="form-label" for="image">Image</label>
                  <input required class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image  %>"></input>
                  <div class="invalid-feedback">
                    Please provide a valid image.
              </div>
                </div>



              <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                <span class="input-group-text">$</span>
                <input required type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price  %>" placeholder="0.00" aria-label="Amount (to the nearest dollar)">
                <div class="invalid-feedback">
                    Please provide a valid price.
              </div>
                <span class="input-group-text">.00</span>
            </div>
              </div>
              
              <div class="mb-3">
                  <label class="form-label" for="description">Description</label><br>
                  <textarea required class="form-control" name="campground[description]" id="description" cols="30" rows="10" ><%= campground.description  %></textarea>
                  <div class="invalid-feedback">
                    Please provide a valid description.
              </div>
                </div>
              <div class="mb-3">
                  <button class="btn btn-primary">Submit</button>
              </div>
            
          </form>
      
          <a href="/campgrounds">Back to All campgrounds</a> 
        </div>
      </div>
      
    
